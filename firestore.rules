
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacher(teacherId) {
      return isSignedIn() && request.auth.uid == teacherId;
    }
    
    function isImmutable(fieldName) {
      return request.resource.data[fieldName] == resource.data[fieldName];
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource != null && isImmutable('id');
      allow delete: if isOwner(userId) && resource != null;
    }

    match /users/{teacherId}/courses/{courseId} {
        allow get, list, delete: if isOwner(teacherId);
        allow create: if isOwner(teacherId) && request.resource.data.teacherId == teacherId;
        allow update: if isOwner(teacherId) && resource != null && isImmutable('teacherId');

        match /blocks/{blockId} {
          allow get, list, create: if isOwner(teacherId);
          allow update, delete: if isOwner(teacherId) && resource != null;
        }

        match /assignments/{assignmentId} {
          allow get, list, create: if isOwner(teacherId);
          allow update, delete: if isOwner(teacherId) && resource != null;
        }

        match /quizzes/{quizId} {
          allow get, list, create: if isOwner(teacherId);
          allow update, delete: if isOwner(teacherId) && resource != null;

          match /questions/{questionId} {
             allow get, list, create, update, delete: if isOwner(teacherId);
          }
        }
    }

    match /submissions/{submissionId} {
      allow get: if (isOwner(request.resource.data.userId) || isTeacher(request.resource.data.teacherId));
      allow list: if isSignedIn(); // Be cautious, might need to be more restrictive
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isTeacher(request.resource.data.teacherId); // Only teachers can grade
      allow delete: if false; // Nobody can delete a submission
    }
  }
}
